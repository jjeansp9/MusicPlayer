<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카카오 로그인"
        android:textColor="@color/black"
        android:backgroundTint="#E8CA35"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"/>


    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카카오 로그아웃"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/login"
        android:textColor="@color/black"
        android:backgroundTint="#E8CA35"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/token_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카카오 토큰정보"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/logout"
        android:textColor="@color/black"
        android:backgroundTint="#E8CA35"
        android:layout_marginTop="40dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/kakao_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/token_info"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/kakao_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/kakao_image"/>

    <Button
        android:id="@+id/kakao_unlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:backgroundTint="#E8CA35"/>

</RelativeLayout>